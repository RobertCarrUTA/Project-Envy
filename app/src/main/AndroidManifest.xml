<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cse3310semesterproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Project Envy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CSE3310SemesterProject">
        <receiver android:name=".WidgetActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_activity_info" />
        </receiver>

        <activity android:name=".BudgetManagementActivity" />
        <activity android:name=".BudgetAnalysisActivity" />
        <activity android:name=".MonthlyReportActivity" />
        <activity android:name=".WeeklyReportActivity" />
        <activity android:name=".LoanActivity" />
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".PrioritiesActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".BudgetActivity" />
        <activity android:name=".FinanceActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>